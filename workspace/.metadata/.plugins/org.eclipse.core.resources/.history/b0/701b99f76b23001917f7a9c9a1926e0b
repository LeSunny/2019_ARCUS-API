package com.jam2in.restapi.perf;

import java.util.concurrent.Future;

import net.spy.memcached.ArcusClient;
import net.spy.memcached.ConnectionFactoryBuilder;

public class ApiPerfTest {

	private ArcusClient arcusClient;

	public ApiPerfTest(String hostPorts, String serviceCode) {
		System.setProperty("net.spy.log.LoggerImpl", "net.spy.memcached.compat.log.Log4JLogge");
		arcusClient = arcusClient.createArcusClient(hostPorts, serviceCode,new ConnectionFactoryBuilder());	
	}
	
	public boolean perfStringSet(String key, int exp, String value) {
		boolean ret;
		Future<Boolean> future;
		
		try {
			future = arcusClient.set(key, exp, value);
			
		}catch(Exception e) {
			e.printStackTrace();
			ret = false;
		}
	}
	
}
